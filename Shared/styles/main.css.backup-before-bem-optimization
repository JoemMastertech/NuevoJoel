/* =================================================================
   REGLAS LANDSCAPE CONSOLIDADAS - ANCHOS DE COLUMNA OPTIMIZADOS
   ================================================================= */

/* Reglas base consolidadas para todas las orientaciones landscape */
@media (orientation: landscape) {
  /* Consolidación de anchos de columna - elimina duplicación */
  .product-table th:nth-child(1), 
  .product-table td:nth-child(1) { 
    width: 45%; 
  }
  
  .product-table th:nth-child(2), 
  .product-table td:nth-child(2) { 
    width: 30%; 
  }
  
  .product-table th:nth-child(3), 
  .product-table td:nth-child(3) { 
    width: 25%; 
  }
  
  /* Tipografía base consolidada para landscape - elimina duplicación */
  .product-table th,
  .liquor-table th {
    white-space: nowrap;
    word-break: keep-all;
    hyphens: none;
    min-width: 0;
  }
}

/* ===== MÓVIL LANDSCAPE (max-width: 768px) ===== */
@media (max-width: 768px) and (orientation: landscape) {
  /* Ajustes específicos para móvil landscape */
  .product-table th,
  .liquor-table th {
    font-size: 0.75rem;
    padding: 8px 4px;
  }
  
  /* Mantener imágenes consistentes en móvil landscape */
  .product-table[data-category="cervezas"] td.image-icon img,
  .product-table[data-category="refrescos"] td.image-icon img {
    width: 45px;
    height: 45px;
  }
}

/* ===== TABLET LANDSCAPE (768px - 1024px) ===== */
@media (min-width: 768px) and (max-width: 1024px) and (orientation: landscape) {
  /* Ajustes específicos para tablet landscape */
  .product-table th,
  .liquor-table th {
    font-size: 0.85rem;
    padding: 10px 6px;
  }
  
  /* Mantener imágenes consistentes en tablet landscape */
  .product-table[data-category="cervezas"] td.image-icon img,
  .product-table[data-category="refrescos"] td.image-icon img {
    width: 48px;
    height: 48px;
  }
}

/* =================================================================
   ALINEACIÓN PORTRAIT CONSOLIDADA - ESPECIFICIDAD OPTIMIZADA
   ================================================================= */

/* Reglas base para portrait - especificidad reducida y consolidada */
@media (orientation: portrait) {
  /* Alineación base para columnas de texto */
  .product-table td:first-child,
  .product-table td.product-name,
  .product-table td:nth-child(2),
  .product-table td.product-ingredients {
    text-align: left;
    vertical-align: top;
    white-space: normal;
  }
}

/* Ajustes específicos de padding por resolución */
@media (max-width: 768px) and (orientation: portrait) {
  .product-table td:first-child,
  .product-table td.product-name {
    padding-left: 15px;
  }
  
  .product-table td:nth-child(2),
  .product-table td.product-ingredients {
    padding-left: 10px;
  }
}

@media (max-width: 480px) and (orientation: portrait) {
  .product-table td:first-child,
  .product-table td.product-name {
    padding-left: 10px; /* Consolidated - using the more compact value */
  }
  
  .product-table td:nth-child(2),
  .product-table td.product-ingredients {
    padding-left: 6px; /* Consolidated - using the more compact value */
  }
}

/* Mantener imágenes centradas */
.product-table td.image-icon {
  text-align: center;
}

.product-table td.image-icon img {
  display: block;
  margin: 0 auto;
}

